extends ../layout

block content
    h1 #{title}
    p
        a.button(href='/patrons/add') Create New Patron
    p
        form(method='GET', action='/patrons')
            input#search(type='text', name='search', value=search, placeholder='Search by first name, last name, library ID or email')
    table
        thead
            tr
                th Name
                th Address
                th Email
                th Library ID
                th Zip
        tbody
            tbody
                if patrons.length > 0
                    each patron in patrons
                        tr
                            td
                                a(href='/patrons/' + patron.id) #{patron.name()}
                            td #{patron.address}
                            td #{patron.email}
                            td #{patron.library_id}
                            td #{patron.zip_code}
                else 
                    tr
                        td No patron records were found